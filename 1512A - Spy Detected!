#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t,ra[100],count,x,n,i,k=0;
    cin>>t;
    while(t--)
    {
        k=0;
        cin>>n;
        for(i=0; i<n; i++)
        {
            cin>>ra[i];
        }
        x=ra[0];
            if(ra[0]!= ra[1])
            {
                if(ra[0]==ra[2])
                {
                    k=1;
                    cout<<"2"<<endl;
 
                }
                else if(ra[1]==ra[2])
                {
                    k=1;
                    cout<<"1"<<endl;
                }
            }
        if(k==0)
        {
            for(i=0;i<n;i++){
                if(ra[i]!=x){
                    cout<<i+1<<endl;
                    break;}
            }
        }
    }
    return 0;
}
