#include<bits/stdc++.h>
#include<string.h>
#define ll long long int
#define br <<"\n";
#define vec vector<int>
#define For(i,n) for(int i=0;i<n;i++)
#define Forran(i,n,a) for(int i=n;i<a;i++)
#define Forrev(i,n) for(int i = n-1; i >= 0; i--)
#define fastio ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
using namespace std;
int main()
{
    fastio
    string ra;
    cin>>ra;
    int l = ra.length();
    For(i,l)
    {
        if(ra[i]=='a'||ra[i]=='e'||ra[i]=='i'||ra[i]=='o'||ra[i]=='u'||ra[i]+32=='a'||ra[i]+32=='e'||ra[i]+32=='i'||ra[i]+32=='o'||ra[i]+32=='u'||ra[i]=='y'||ra[i]+32=='y');
        else
            cout<<"."<<(char)(ra[i]<='Z'?ra[i]+32:ra[i]);
    }
    return 0;
}
