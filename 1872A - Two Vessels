#include<bits/stdc++.h>
#define ll long long int
#define fastio ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define for(i,n) for(int i=0;i<n;i++)
#define br <<"\n";
using namespace std;
int main()
{
    fastio
    ll t,a,b,c,x,y;
    cin>>t;
    while(t--)
    {
        cin>>a>>b>>c;
        c*=2;
        x=max(a,b);
        y=min(a,b);
        if((x-y)%c==0){
            cout<<(x-y)/c br;}
        else
            cout<<(x-y)/c+1 br;
    }
    return 0;
}
