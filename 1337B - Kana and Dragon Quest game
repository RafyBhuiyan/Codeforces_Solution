#include<bits/stdc++.h>
#include<string.h>
using namespace std;
int main()
{
    int t,x,n,m;
    cin>>t;
    while(t--)
    {
        cin>>x>>n>>m;
        while(n--)
        {
            if(x>20)
                x=(x/2)+10;
            else
                n=0;
        }
        while(m--)
        {
            x-=10;
        }
        if(x<=0)
            cout<<"YES\n";
        else
            cout<<"NO\n";
    }
    return 0;
}
