#include<stdio.h>
int main()
{
    int a,i,j,x,y,sum=0;
    for(i=1;i<=5;i++){
        for(j=1;j<=5;j++){
            scanf("%d",&a);
            if(a==1){
                x=i;
                y=j;
                break;
            }
        }
 
    }
    if(x!=3 || y!=3){
        while(x!=3){
            if(x>3){
                x--;
                sum++;
            }
            else if(x<3){
                x++;
                sum++;
            }
        }
 
        while(y!=3){
            if(y>3){
                y--;
                sum++;
            }
            else if(y<3){
                y++;
                sum++;
            }
        }
    }
    printf("%d",sum);
    return 0;
}
