#include<bits/stdc++.h>
using namespace std;
int main()
{
    int x,a,b,total,count=0,i,num;
    cin>>x;
    for(i=0; i<x; i++)
    {
        cin>>num;
        if(i==0){
            a=num;
            b=num;
        }
        else if(num>a){
            a=num;
            count++;
        }
        else if(num<b){
            b=num;
            count++;
        }
    }
    cout<<count;
    return 0;
}
