#include<bits/stdc++.h>
#include<string.h>
#define ll long long int
#define br <<"\n";
#define FOR(i,n) for(int i=0;i<n;i++)
#define FORran(i,n,a) for(int i=n;i<a;i++)
#define FORrev(i,n) for(int i = n-1; i >= 0; i--)
#define fastio ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
using namespace std;
int main()
{
    fastio
    ll a,t,sum,b;
    cin>>t;
    while(t--){
        cin>>a>>b;
        if(a%2==0 || (a-b)%2==0){
            cout<<"YES" br;
        }
        else
            cout<<"NO" br;
    }
    return 0;
}
