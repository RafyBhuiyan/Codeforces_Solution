#include<bits/stdc++.h>
#include<string.h>
using namespace std;
int main()
{
    int n,m,i,j;
    cin>>n>>m;
    for(i=1;i<=n;i++)
    {
        if(i%2!=0)
        {
            for(j=1;j<=m;j++)
            {
                cout<<"#";
            }
            cout<<"\n";
        }
        if(i%2==0)
        {
            if(i%4==0)
                cout<<"#";
            for(j=1;j<=m-1;j++)
            {
                cout<<".";
            }
            if(i%4!=0)
                cout<<"#";
            cout<<endl;
        }
    }
    return 0;
}
