#include<bits/stdc++.h>
#include<string.h>
#define ll long long int
#define br <<"\n";
#define For(i,n) for(int i=0;i<n;i++)
#define Forran(i,n,a) for(int i=n;i<a;i++)
#define Forrev(i,n) for(int i = n-1; i >= 0; i--)
#define fastio ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
using namespace std;
int main()
{
    fastio
    string ra;
    cin>>ra;
    int l=ra.length(),i,j,temp=0;
    For(i,l){
        if(i==0 && ra[i]!='1'){
            temp++;
            break;
        }
        else if(ra[i]=='4'){
            if(ra[i-1]=='1' || ra[i-2]=='1');
            else
            {
                temp++;
                break;
            }
        }
        else if(ra[i]!='1'){
            temp++;
            break;
        }
    }
    if(temp){
        cout<<"NO";
    }
    else
        cout<<"YES";
    return 0;
}
